{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  }
}
